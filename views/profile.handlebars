<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Profile:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="user-name">Name:</label>
        <input class="form-input" type="text" id="user-name" name="user-name" />
      </div>
      <div class="form-group">
        <label for="last-name">Last Name:</label>
        <input class="form-input" type="number" id="last-name" name="last-name" />
      </div>
      <div class="form-group">
        <label for="email">email:</label>
        <textarea class="form-input" id="email" name="email"></textarea>
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <textarea class="form-input" id="password" name="password"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Profile</button>
      </div>
    </form>
  </div>

